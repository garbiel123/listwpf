<Window x:Class="listwpf.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uczeń" Height="450" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="PESEL *"/>
            <TextBox x:Name="PeselBox"/>

            <TextBlock Text="Imię *"/>
            <TextBox x:Name="ImieBox"/>

            <TextBlock Text="Drugie imię"/>
            <TextBox x:Name="DrugieImieBox"/>

            <TextBlock Text="Nazwisko *"/>
            <TextBox x:Name="NazwiskoBox"/>

            <TextBlock Text="Data urodzenia *"/>
            <DatePicker x:Name="DataUrodzeniaPicker"/>

            <TextBlock Text="Telefon"/>
            <TextBox x:Name="TelefonBox"/>

            <TextBlock Text="Adres *"/>
            <TextBox x:Name="AdresBox"/>

            <TextBlock Text="Miejscowość *"/>
            <TextBox x:Name="MiejscowoscBox"/>

            <TextBlock Text="Kod pocztowy *"/>
            <TextBox x:Name="KodPocztowyBox"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Margin="5" Width="75" Click="Ok_Click"/>
            <Button Content="Cancel" Margin="5" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
